# =============================================================================
# VoxCalls Frontend Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (without trailing slash)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# =============================================================================
# App Configuration
# =============================================================================

# App name (displayed in the UI)
NEXT_PUBLIC_APP_NAME=VoxCalls

# App URL (for OAuth callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Feature Flags (optional)
# =============================================================================

# Enable dark mode toggle
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Enable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# =============================================================================
# Third-party Services (if needed on client)
# =============================================================================

# Analytics (e.g., Google Analytics, Mixpanel)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error tracking (e.g., Sentry)
# NEXT_PUBLIC_SENTRY_DSN=
