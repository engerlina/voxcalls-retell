# =============================================================================
# VoxCalls Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database (Railway PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/voxcalls
# For sync operations (Alembic)
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/voxcalls

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Encryption (for storing secrets like API keys)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-256-bit-encryption-key-for-secrets

# -----------------------------------------------------------------------------
# ElevenLabs API
# -----------------------------------------------------------------------------
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# -----------------------------------------------------------------------------
# Twilio (for purchasing and managing phone numbers via API)
# -----------------------------------------------------------------------------
# These credentials allow the platform to search, purchase, and configure
# phone numbers. Individual numbers are stored in the database and managed
# by Super Admins through the admin interface.
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# -----------------------------------------------------------------------------
# Redis (Optional - for caching/rate limiting)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Super Admin (Initial Setup)
# -----------------------------------------------------------------------------
SUPER_ADMIN_EMAIL=admin@voxcalls.com
SUPER_ADMIN_PASSWORD=change-this-password

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ORIGINS=["http://localhost:3000","https://voxcalls.vercel.app"]
